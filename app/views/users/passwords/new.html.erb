<main class="container">
  <div class="card">
    <div class="header">
      <h1>Forgot your password?</h1>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "form", data: { turbo: false } ) do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__input", placeholder: "Email" %>

      <div class="mb-5">
        <%= f.submit "Send me reset password instructions", class: "btn btn--primary" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</main>
