<main class="container">
  <div class="card">
    <div class="header">
      <h1>Join the community</h1>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form", data: { turbo: false } ) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form__group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__input", placeholder: "Email" %>
        <%= f.text_field :username, autofocus: true, class: "form__input", placeholder: "Username" %>
      </div>

      <div class="form__group">
        <%= f.password_field :password, autocomplete: "new-password", class: "form__input", placeholder: "Password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form__input", placeholder: "Confirm Password" %>
      </div>

      <div class="mb-5">
        <%= f.submit "Sign up", class: "btn btn--primary" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</main>
